{
    "train_micro_batch_size_per_gpu": 3,
    "gradient_accumulation_steps": 32,
    "zero_optimization": {
        "stage": 2,
        "contiguous_gradients": true,
        "overlap_comm": true,
        "reduce_scatter": true,
        "offload_optimizer": {
            "device": "cpu",
            "pin_memory": true
        }
    },
    "bf16": {
        "enabled": true
    },
    "fp16": {
        "enabled": false
    },
    "amp": {
        "enabled": false
    },
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 1e-5,
            "betas": [
                0.9,
                0.999
            ],
            "eps": 1e-8,
            "weight_decay": 0.1
        }
    },
    "scheduler": {
        "type": "WarmupLR",
        "params": {
            "warmup_min_lr": 0,
            "warmup_max_lr": 1e-5,
            "warmup_num_steps": 500
        }
    },
    "data_efficiency": {
        "enabled": true,
        "seed": 42,
        "data_sampling": {
            "num_workers": 2,
            "pin_memory": true
        }
    },
    "gradient_clipping": 1.0,
    "steps_per_print": 1,
    "wall_clock_breakdown": true,
    "dump_state": true
}